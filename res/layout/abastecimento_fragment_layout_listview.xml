<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/Abastecimento_Item_ListView_Posto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Posto"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Abastecimento_View_Observacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="km"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Abastecimento_Item_ListView_Km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/Abastecimento_View_Observacao"
                android:text="00"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Abastecimento_Item_ListView_Combustivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Abastecimento_Item_ListView_Posto"
                android:text="Gasolina" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Abastecimento_Item_ListView_Combustivel"
                android:text="R$" />

            <TextView
                android:id="@+id/Abastecimento_Item_ListView_PrecoCombustivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:text="2,890" />

            <TextView
                android:id="@+id/Abastecimento_Item_ListView_MediaLitro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView3"
                android:text="0" />

            <TextView
                android:id="@+id/Abastecimento_Item_ListView_ValorTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/Abastecimento_Item_ListView_Posto"
                android:text="123,00" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/Abastecimento_Item_ListView_PrecoCombustivel"
                android:layout_alignBottom="@+id/Abastecimento_Item_ListView_PrecoCombustivel"
                android:layout_alignParentRight="true"
                android:text=" L" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView7"
                android:layout_toLeftOf="@+id/Abastecimento_Item_ListView_ValorTotal"
                android:text="R$ " />

            <TextView
                android:id="@+id/Abastecimento_Item_ListView_QtdeCombustivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Abastecimento_Item_ListView_ValorTotal"
                android:layout_toLeftOf="@+id/textView7"
                android:text="8,651" />

            <TextView
                android:id="@+id/Abastecimento_Item_ListView_Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignParentRight="true"
                android:text="01/01/2000"
                android:textColor="#646464"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_toRightOf="@+id/Abastecimento_Item_ListView_MediaLitro"
                android:text="km/L" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>