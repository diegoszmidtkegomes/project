<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/Lembretes_Item_ListView_Motivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Motivo"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView147"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text=" km"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Lembretes_Item_ListView_Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/Lembretes_Item_ListView_Motivo"
                android:text="01/01/2000"
                android:textColor="#646464"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Lembretes_Item_ListView_Odometro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView147"
                android:text="00"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Lembretes_Item_ListView_Tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/Lembretes_Item_ListView_Data"
                android:layout_alignBottom="@+id/Lembretes_Item_ListView_Data"
                android:layout_alignParentLeft="true"
                android:text="Tipo" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>